@model IEnumerable<MyLibrary.Models.Library>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <a asp-controller="Shelves" asp-action="Index" asp-route-id="@item.Id" class="text-decoration-none card-link">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Genre)</h6>
                        <p class="card-text">
                            <strong>First Shelf:</strong> @Html.DisplayFor(modelItem => item.FirstShelf)
                        </p>
                        <div class="mt-3">
                            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<!-- Including Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var cards = document.querySelectorAll(".card");

        cards.forEach(function (card) {
            card.addEventListener("mouseenter", function () {
                card.classList.add("shadow-lg", "transform-scale");
            });

            card.addEventListener("mouseleave", function () {
                card.classList.remove("shadow-lg", "transform-scale");
            });

            card.addEventListener("mousedown", function () {
                card.classList.add("shadow-sm", "transform-scale-down");
            });

            card.addEventListener("mouseup", function () {
                card.classList.remove("shadow-sm", "transform-scale-down");
                card.classList.add("shadow-lg", "transform-scale");
            });
        });
    });
</script>